---
interface Props {
	title: string;
  date: string;
  href: string;
}

const { href, title, date } = Astro.props;
---

<div class="newsItem">
	<a href={href}>
    <div class="newsItem__header">
      <time>{date}</time>
    </div>
    <h2 class="newsItem__title">
      {title}
    </h2>
	</a>
</div>
<style lang="scss">
@use "../scss/_setting.scss" as *;

	.newsItem {
    border-top: 1px solid #ccc;
    border-bottom: 1px solid #ccc;
    &+.newsItem{
      margin-top: -1px;
    }
    a{
      display: block;
      padding: 1.5em 0;
      color: inherit;
      text-decoration: none;
    }
    &__header{
      margin-bottom: .5em;
      time{
        color: #666;
      }
    }
    &__title{
      font-size: minset(16,18);
    }
	}
</style>
